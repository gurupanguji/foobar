<div class="row">
  <div class="span6 offset3">
    <div class="well">
			<!-- Display image -->
			<%= image_tag @pin.image %>
			<!-- Display description -->
      <p>
        <%= @pin.description %>
      </p>
			<!-- Display username -->
      <p>
        <%= @pin.user.name %>
      </p>
			<!-- Show edit only if it is the user's pin -->
			<% if current_user == @pin.user %>
	      <%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
	    <%= link_to 'Back', pins_path %>
    </div>
  </div>
</div>


