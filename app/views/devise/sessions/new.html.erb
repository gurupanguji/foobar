<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= f.input :email %> <!-- This is what simple_form gem gets us -->
  <%= f.input :password %>
  <%= f.input :remember_me, as: :boolean %> <!-- Boolean is the one making it a checkbox -->

<div class="form-actions"> <!-- This is the one that gives the CSS for the form actions -->
  <%= f.submit "Sign in", class:"btn btn-primary" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
